create user if not exists 'ki-pacrat-d'@'::1' identified by '~ki-pacrat-d-password~';
grant select
 , insert
 , update
 , delete
 , create
 , create routine
 , alter routine
  on emsidb_d.*
  to 'ki-pacrat-d'@'::1'
;
--
-- Must grant PROCESS priv to primary user to include SHOW ENGINE INNODB
-- STATUS output in MySQL-related exception reports.
--
;
grant process
  on *.*
  to 'ki-pacrat-d'@'::1'
;
create user if not exists 'ki-pacrath-d'@'::1' identified by '~ki-pacrath-d-password~';
grant select
  on homedb_d.*
  to 'ki-pacrath-d'@'::1'