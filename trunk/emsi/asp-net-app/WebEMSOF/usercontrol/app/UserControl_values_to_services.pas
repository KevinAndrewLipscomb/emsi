  SessionSet('UserControl_values_to_services.p',p);
end;

function TWebUserControl_values_to_services.Fresh: TWebUserControl_values_to_services;
begin
  session.Remove('UserControl_values_to_services.p');
  Fresh := self;
end;

procedure TWebUserControl_values_to_services.GridView_control_Sorting(sender: System.Object;
  e: System.Web.UI.WebControls.GridViewSortEventArgs);
begin
  if e.SortExpression = p.sort_order then begin
    p.be_sort_order_ascending := not p.be_sort_order_ascending;
  end else begin
    p.sort_order := e.SortExpression;
    p.be_sort_order_ascending := TRUE;
  end;
  GridView_control.editindex := -1;
  Bind;
end;

procedure TWebUserControl_values_to_services.Bind;
begin
  p.biz_emsof_requests.BindValuesToServices(p.sort_order,p.be_sort_order_ascending,GridView_control);
end;

